<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#484464"
    android:fitsSystemWindows="true"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    tools:context="com.example.michael.bodyfatapp.Account.MyAccount">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:columnCount="1"
        android:id="@+id/gridLayout1"
        android:rowCount="5">


        <TextView
            android:id="@+id/changeEmail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Email Reset"
            android:textAllCaps="false"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:drawableLeft="@drawable/ic_perm"
            android:layout_column="0"
            android:layout_row="0"
            />

        <TextView
            android:id="@+id/accChangePassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Password Reset"
            android:gravity="center_vertical"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/ic_lock"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_column="0"
            android:layout_row="1"

            />
        <TextView
        android:id="@+id/delAccount"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Delete Account "
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/ic_delete"
        android:layout_row="2"
        android:layout_column="0"
        />
        <TextView
            android:id="@+id/ShowBugs"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Bugs and other information "
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_info"
            android:layout_row="3"
            android:layout_column="0"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/text1"
            android:textSize="14dp"
            android:textColor="#FFFFFF"
            android:layout_below="@id/ShowBugs"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:text="For bugs or any queries please email m.murphy79@nuigalway.ie"/>

        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="#FFFFFF"
            android:layout_below="@id/text1"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:text="For project information and formulas click the link here: https://github.com/mmurphy96/FYP"
           android:autoLink="web">

        </TextView>

    </GridLayout>




    <Button
        android:id="@+id/signOutButton"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:layout_weight="0.5"
        android:background="@drawable/transparentbutton"
        android:text="Sign Out"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold" />



</RelativeLayout>