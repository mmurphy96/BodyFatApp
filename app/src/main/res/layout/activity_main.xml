<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        tools:context="com.example.michael.bodyfatapp.Login_Register.MainActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/run2"
            android:backgroundTintMode="src_atop"
            android:backgroundTint="#3fd1bcbd">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_above="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="7dp"
            android:background="@mipmap/ic_bodyfaticon_round" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/emailField"
            android:layout_centerHorizontal="true"
            android:text="Body Fat Tracker"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:id="@+id/textView2" />


        <EditText
            android:id="@+id/emailField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:layout_above="@id/passwordField"
            android:hint="Email.."
            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="#FFFFFF"
            android:drawableLeft="@drawable/ic_perm"
            android:drawablePadding="10dp"
            android:textColorHint="#FFFFFF"
            android:drawableStart="@drawable/ic_perm"/>

        <EditText
            android:id="@+id/passwordField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@id/loginbutton"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="15dp"
            android:hint="Password.."
            android:inputType="textPassword"
            android:padding="15dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="10dp" android:drawableStart="@drawable/ic_lock">
        </EditText>

        <Button
            android:id="@+id/loginbutton"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/forgotPassword"
            android:layout_centerHorizontal="true"
            android:background="@drawable/transparentbutton"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_above="@id/register"
            android:id="@+id/forgotPassword"
            android:text="Forgot Password"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="12sp"/>
        <Button
            android:id="@+id/register"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/transparentbutton"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:text="Don't have an Account? Register here!"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">


        </Button>

        <ProgressBar
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_above="@+id/loginbutton"
            android:layout_centerHorizontal="true"
            android:id="@+id/progressBar"
            android:max="100"
            android:indeterminate="false"/>

    </RelativeLayout>
</LinearLayout>
