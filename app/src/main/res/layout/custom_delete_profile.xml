<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="280dp"
    android:padding="5dp"
    android:layout_gravity="center"
    android:background="@drawable/popuppounded"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"

    >

    <Button
        android:id="@+id/dCloseButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/ic_close"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
        android:layout_alignParentEnd="true"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="When deleting your account, all data will be deleted and cannot be recovered!"
        android:textColor="#FFFFFF"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:textSize="17sp"
        android:paddingRight="5dp"
        android:textStyle="bold"
        android:layout_below="@id/dCloseButton"
        android:paddingLeft="5dp"
        android:id="@+id/deleteText"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Password:"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:id="@+id/confirmText"
        android:layout_below="@+id/deleteText"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textAlignment="center"
        android:inputType="textPassword"
        android:imeOptions="actionDone"
        android:focusable="true"
        android:layout_below="@id/confirmText"
        android:id="@+id/passwordConfirm"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/transparentbutton"
        android:text="Confirm Profile Delete"
        android:id="@+id/confirmDelete"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>