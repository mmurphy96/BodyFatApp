<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@drawable/run2"
    android:backgroundTintMode="src_atop"
    android:backgroundTint="#714e4b4b"
    tools:context="com.example.michael.bodyfatapp.Login_Register.MainActivity">

    <ImageView
        android:id="@+id/regImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@mipmap/ic_bodyfaticon_round" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textRegister"
        android:layout_centerHorizontal="true"
        android:text="Body Fat Tracker"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:id="@+id/textView3" />

    <TextView
        android:id="@+id/textRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/emailFieldAcc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="5dp"
        android:text="To register, please enter your Email and Password below"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="20sp"
        android:textSize="20dp"></TextView>


        <!--Create email field -->
        <EditText
            android:id="@+id/emailFieldAcc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:padding="15dp"
            android:hint="Email.."
            android:drawableLeft="@drawable/ic_perm"

            android:drawablePadding="10dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:layout_above="@id/passwordFieldAcc"/>

        <!--Create password field -->
        <EditText
            android:id="@+id/passwordFieldAcc"
            android:layout_above="@id/registerAcc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:inputType="textPassword"
            android:padding="15dp"
            android:layout_marginBottom="15dp"
            android:hint="Password.." tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:imeOptions="actionDone"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="10dp" android:drawableStart="@drawable/ic_lock"
            android:maxLines="1"

            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>

        <!--Create Register Button field -->
    <Button
        android:id="@+id/registerAcc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:background="@drawable/transparentbutton"
        android:padding="15dp"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
         />

</RelativeLayout>